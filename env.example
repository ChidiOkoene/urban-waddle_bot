# Urban Waddle Bot - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# EXCHANGE CONFIGURATION
# =============================================================================

# Exchange Type: ccxt or mt5
EXCHANGE_TYPE=ccxt

# Exchange Name (for CCXT): binance, bitget, bybit, okx, etc.
EXCHANGE_NAME=binance

# API Credentials (required for live trading)
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here
API_PASSPHRASE=your_passphrase_here

# MetaTrader 5 Configuration (if using MT5)
MT5_ACCOUNT=123456
MT5_PASSWORD=your_mt5_password
MT5_SERVER=MetaQuotes-Demo

# Exchange Settings
SANDBOX_MODE=false
RATE_LIMIT=100

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================

# Trading Mode: paper, live, backtest
BOT_MODE=paper

# Default Trading Settings
DEFAULT_SYMBOL=BTC/USDT
DEFAULT_TIMEFRAME=1h
INITIAL_CAPITAL=10000.0

# Order Settings
COMMISSION_RATE=0.001
SLIPPAGE_RATE=0.0005
ORDER_TIMEOUT=30
MAX_RETRIES=3

# =============================================================================
# RISK MANAGEMENT
# =============================================================================

# Risk Limits
MAX_RISK_PER_TRADE=0.02
MAX_POSITIONS=5
MAX_DRAWDOWN=0.05
MAX_CORRELATION=0.7
MAX_PORTFOLIO_RISK=0.10

# Position Sizing
POSITION_SIZING_METHOD=fixed_percentage
RISK_PERCENTAGE=0.01
MAX_POSITION_SIZE=0.1
MIN_POSITION_SIZE=0.001

# Stop Loss
STOP_LOSS_METHOD=fixed_percentage
STOP_LOSS_PERCENTAGE=0.05
TRAILING_PERCENTAGE=0.03
ATR_MULTIPLIER=2.0
MAX_HOLD_HOURS=24

# =============================================================================
# STRATEGY CONFIGURATION
# =============================================================================

# Active Strategies (comma-separated)
ACTIVE_STRATEGIES=rsi_macd,bollinger_mean_reversion

# Strategy Weights (comma-separated, must sum to 1.0)
STRATEGY_WEIGHTS=0.6,0.4

# RSI + MACD Strategy
RSI_PERIOD=14
RSI_OVERBOUGHT=70
RSI_OVERSOLD=30
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9

# Bollinger Bands Strategy
BOLLINGER_PERIOD=20
BOLLINGER_STD_DEV=2.0
BOLLINGER_ENTRY_THRESHOLD=1.0

# EMA Crossover Strategy
EMA_FAST_PERIOD=12
EMA_SLOW_PERIOD=26
EMA_SIGNAL_THRESHOLD=0.005

# Grid Bot Strategy
GRID_LEVELS=10
GRID_SPACING=0.01
GRID_MAX_POSITION_SIZE=0.1

# DCA Strategy
DCA_INTERVAL_HOURS=24
DCA_POSITION_SIZE=0.05
DCA_MAX_POSITIONS=10

# =============================================================================
# MACHINE LEARNING
# =============================================================================

# ML Configuration
ML_ENABLED=true
MODEL_TYPE=random_forest
RETRAIN_INTERVAL=24
LOOKBACK_PERIOD=100

# Feature Engineering
PRICE_FEATURES=true
TECHNICAL_FEATURES=true
VOLUME_FEATURES=true
TIME_FEATURES=true
LAG_FEATURES=true
ROLLING_FEATURES=true

# Model Parameters
RF_N_ESTIMATORS=100
RF_MAX_DEPTH=10
XGB_N_ESTIMATORS=100
XGB_MAX_DEPTH=6
XGB_LEARNING_RATE=0.1

# =============================================================================
# BACKTESTING
# =============================================================================

# Backtesting Period
BACKTEST_START_DATE=2023-01-01
BACKTEST_END_DATE=2023-12-31
BACKTEST_INITIAL_CAPITAL=10000.0

# Optimization
OPTIMIZATION_METHOD=grid_search
MAX_ITERATIONS=100
POPULATION_SIZE=50
GENERATIONS=100

# Walk-Forward Analysis
WALK_FORWARD_TRAIN_PERIOD=252
WALK_FORWARD_TEST_PERIOD=63
WALK_FORWARD_STEP_SIZE=21

# =============================================================================
# NOTIFICATIONS
# =============================================================================

# Telegram Notifications
TELEGRAM_ENABLED=true
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
TELEGRAM_SEND_TRADES=true
TELEGRAM_SEND_PERFORMANCE=true
TELEGRAM_SEND_ERRORS=true

# Discord Notifications
DISCORD_ENABLED=false
DISCORD_WEBHOOK_URL=your_discord_webhook_url
DISCORD_SEND_TRADES=true
DISCORD_SEND_PERFORMANCE=true
DISCORD_SEND_ERRORS=true

# Email Notifications
EMAIL_ENABLED=false
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_TO=recipient@example.com
EMAIL_SEND_TRADES=true
EMAIL_SEND_PERFORMANCE=true
EMAIL_SEND_ERRORS=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL
DATABASE_URL=sqlite:///data/trading_bot.db

# Database Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Backup Settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=24
BACKUP_RETENTION=7
BACKUP_PATH=backups/

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log Format
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# File Logging
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs/
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_BACKUP_COUNT=5

# Console Logging
LOG_CONSOLE_ENABLED=true
LOG_CONSOLE_COLORIZE=true

# Logger Levels
LOG_TRADING_BOT=INFO
LOG_EXCHANGE=INFO
LOG_STRATEGIES=INFO
LOG_RISK_MANAGEMENT=INFO
LOG_BACKTESTING=INFO
LOG_ML=INFO
LOG_NOTIFICATIONS=INFO
LOG_DATABASE=WARNING

# =============================================================================
# DASHBOARD CONFIGURATION
# =============================================================================

# Dashboard Settings
DASHBOARD_ENABLED=true
DASHBOARD_HOST=localhost
DASHBOARD_PORT=8501
DASHBOARD_THEME=dark

# Update Intervals (seconds)
DASHBOARD_CHARTS_INTERVAL=5
DASHBOARD_POSITIONS_INTERVAL=10
DASHBOARD_PERFORMANCE_INTERVAL=30
DASHBOARD_ALERTS_INTERVAL=60

# Chart Settings
DASHBOARD_CANDLESTICK_ENABLED=true
DASHBOARD_PERFORMANCE_ENABLED=true
DASHBOARD_INDICATORS_ENABLED=true

# =============================================================================
# BOT EXECUTION
# =============================================================================

# Bot Settings
BOT_UPDATE_INTERVAL=60
BOT_EMERGENCY_STOP=false
BOT_MAX_DAILY_TRADES=100
BOT_MAX_DAILY_LOSS=0.05

# Paper Trading
PAPER_TRADING_INITIAL_BALANCE=10000.0
PAPER_TRADING_COMMISSION_RATE=0.001
PAPER_TRADING_SLIPPAGE_RATE=0.0005

# =============================================================================
# SECURITY
# =============================================================================

# API Key Encryption
ENCRYPT_API_KEYS=true
ENCRYPTION_KEY=your_encryption_key_here

# Rate Limiting
RATE_LIMIT_API_CALLS=100
RATE_LIMIT_TRADES=10

# Access Control
ACCESS_CONTROL_ALLOWED_IPS=
ACCESS_CONTROL_REQUIRE_AUTH=false
ACCESS_CONTROL_SESSION_TIMEOUT=3600

# =============================================================================
# MONITORING
# =============================================================================

# Prometheus Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Grafana Dashboard
GRAFANA_ENABLED=true
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# =============================================================================
# NGINX (if using reverse proxy)
# =============================================================================

# Nginx Configuration
NGINX_ENABLED=false
NGINX_SSL_ENABLED=false
NGINX_SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
NGINX_SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# =============================================================================
# DEVELOPMENT
# =============================================================================

# Development Settings
DEBUG=false
RELOAD_ON_CHANGE=false
PROFILE_PERFORMANCE=false

# Testing
TEST_MODE=false
TEST_DATABASE_URL=sqlite:///test.db
TEST_LOG_LEVEL=DEBUG

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================

# Production Environment
PRODUCTION=false
ENVIRONMENT=development

# Performance Tuning
WORKER_PROCESSES=1
WORKER_THREADS=4
MAX_CONNECTIONS=1000

# Memory Limits
MAX_MEMORY_USAGE=512MB
GC_THRESHOLD=1000

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================

# Add any custom environment variables here
# CUSTOM_SETTING=value
